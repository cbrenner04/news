<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="heading{{ this._id }}">
            <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ this._id }}" aria-expanded="true" aria-controls="collapse{{ this._id }}">
            {{ this.title }}
          </a>
          <small>{{ this.origin }}</small>
        </h4>
        </div>
        <div id="collapse{{ this._id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ this._id }}">
            <div class="panel-body">
                <form action="/comments" class="form" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name="body"></textarea>
                        <input type="hidden" name="article_title" value="{{ this.title }}"></input>
                        <button type="submit" class="btn btn-default">Comment</button>
                    </div>
                </form>
                <hr>
                <ul>
                    {{#each this.comments}}
                    <p>{{ this.body }}</p>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/each}}
</div>

